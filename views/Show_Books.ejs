<html>
<head>
	<title>Kvantum</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/books.css">
</head>
<body class="b1">
	<h1>Books As Per Your Search</h1>

	<div class="container">
	<% searchResults.forEach(function(book){ %>
		<div>
			<b>Title: &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp <%= book.title %></b><br>
			<b>Authors: &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp </b><%= book.authors %> <br>
			<b>Publisher: &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp </b><%= book.publisher %> <br>
			<b>Categories: &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp </b><%= book.categories %> <br>
			<b>Maturity Ratings: &nbsp &nbsp &nbsp </b><%= book.maturityRating %> <br>
			<b>Language: &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp </b><%= book.language %> <br>
			<b>Images: &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp </b><%= book.images %> <br>

			<br>

			<a href="/">
				<button type="button" class="btn btn-danger btn-sm" name="delete_item">Back</button>
			</a>
			<a href="/show_more/<%= book.id %>">
				<button type="button" class="btn btn-primary btn-sm" name="delete_item">Read More</button>
			</a>

			<hr>
		</div>
	<% }); %>
	</div>

</body>
</html>